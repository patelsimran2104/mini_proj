<h1>Edit password</h1>
<%= @student.email %>

<%= form_with(model: @student) do |form| %>    
  
    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password %>
      <% @student.errors.full_messages_for(:password).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div class="field">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation %>
      <% @student.errors.full_messages_for(:password).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  
<%= link_to 'Back', @student %>
